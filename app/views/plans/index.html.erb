<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>企画者</th>
      <th>コート</th>
      <th>募集人数</th>
      <th>日時</th>
      <th>企画説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.user %></td>
        <td><%= plan.court %></td>
        <td><%= plan.max_member %></td>
        <td><%= plan.event_date %></td>
        <td><%= plan.description %></td>
        <td><%= link_to '詳細', plan %></td>
        <td><%= link_to '編集', edit_plan_path(plan) %></td>
        <td><%= link_to '削除', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '企画登録', new_plan_path %>
